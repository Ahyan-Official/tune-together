<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    >





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/micross"
                android:gravity="center"
                android:text="Create Your Account"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textSize="28sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"

                android:layout_marginEnd="40dp"
                android:background="@drawable/blue_circularbutton"
                >

                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:hint="Name"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:minWidth="150dp"
                    android:paddingStart="@dimen/medium"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"

                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="#B5B5B5"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/micross"
                    android:padding="@dimen/_5sdp"
                    android:paddingEnd="@dimen/medium"
                    android:src="@drawable/profile" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/blue_circularbutton"
                >

                <EditText
                    android:id="@+id/phoneField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:hint="Phone Number"
                    android:textColor="#fff"

                    android:minWidth="150dp"
                    android:textColorHint="#fff"

                    android:paddingStart="@dimen/medium"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"

                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="#B5B5B5"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/micross"
                    android:padding="@dimen/_5sdp"
                    android:paddingEnd="@dimen/medium"
                    android:src="@drawable/telephone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/blue_circularbutton"
                >

                <EditText
                    android:id="@+id/emailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:hint="Email"
                    android:textColor="#fff"

                    android:minWidth="150dp"
                    android:textColorHint="#fff"

                    android:paddingStart="@dimen/medium"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:tint="#B5B5B5"

                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="#B5B5B5"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/micross"
                    android:padding="@dimen/_5sdp"
                    android:paddingEnd="@dimen/medium"
                    android:src="@drawable/eeee" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/blue_circularbutton"
                >

                <EditText
                    android:id="@+id/passField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColorHint="#fff"
                    android:textColor="#fff"


                    android:inputType="textPassword"
                    android:minWidth="150dp"
                    android:paddingStart="@dimen/medium"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"

                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="#B5B5B5"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/micross"
                    android:padding="@dimen/_5sdp"
                    android:paddingEnd="@dimen/medium"
                    android:src="@drawable/padlock" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/blue_circularbutton"
                >

                <EditText
                    android:id="@+id/passField2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Confirm Password"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColorHint="#fff"
                    android:textColor="#fff"

                    android:inputType="textPassword"
                    android:minWidth="150dp"
                    android:paddingStart="@dimen/medium"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"

                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="#B5B5B5"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/micross"
                    android:padding="@dimen/_5sdp"
                    android:paddingEnd="@dimen/medium"
                    android:src="@drawable/padlock" />
            </RelativeLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"

                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="@dimen/_10sdp"

                android:textAllCaps="false"
                android:background="@drawable/btn_2"
                android:text="Create an account"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                 />

            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#B5B5B5"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/mid"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="  Or Sign in with  "
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_11sdp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"

                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/mid"
                    android:background="@color/colorPrimary"/>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_bottom"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/search" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:background="@drawable/bg_apple"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/apple" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_bottom"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/facebook" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>




    </ScrollView>



    <ProgressBar
        android:id="@+id/determinateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_centerVertical="true" />



</RelativeLayout>