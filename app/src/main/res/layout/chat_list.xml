                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Connect "
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_10sdp"
